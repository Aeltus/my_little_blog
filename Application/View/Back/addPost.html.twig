{% extends "Back/layout.html.twig" %}

{% block title %}Ajout d'un post{% endblock %}
{% block headScript %}<script type="text/javascript" src="vendor/ckeditor/ckeditor/ckeditor.js"></script>{% endblock %}

{% block content %}

    <div class="container">
        <div class="row">
            <div class="col-md-12 text-center">
                <h1>Ajout d'un nouveau post</h1>
            </div>

            <div class="col-md-12">
                <form action="" method="post" role="form" class="adminForm">

                    {% for line in form %}
                        {{ line|raw }}
                    {% endfor %}

                    <div class="text-center"><button type="submit" class="btn">Enregistrer le post</button></div>
                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        CKEDITOR.replace( 'content', {
            filebrowserBrowseUrl : '/Application/FileBrowser/browse.php?type=Images',
            filebrowserUploadUrl : '/Application/FileBrowser/upload.php?type=Files'
        });
    </script>


{% endblock %}
